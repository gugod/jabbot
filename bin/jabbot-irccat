#!/usr/bin/env perl
use v5.18;
use JSON::PP qw(encode_json);

use FindBin;
use lib "$FindBin::Bin/../lib";

use Jabbot::Remote;
use Getopt::Long;

GetOptions(
    (my $opt = {}),
    "network=s",
    "channel=s",
    "text=s"
);

my $remote = Jabbot::Remote->new( target => "ircbot" );
my $res = $remote->post($opt);

if ($res->{error}) {
    say $res->{error};
} else {
    say "OK";
}
