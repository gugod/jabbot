#!/usr/bin/env perl
use common::sense;
use FindBin;
use lib "$FindBin::Bin/../lib";

use Jabbot;
use Jabbot::RemoteCore;
use List::UtilsBy qw(rev_nsort_by);

use IO::Handle;

my $j = Jabbot::RemoteCore->new;
my $ans = [];

if (@ARGV > 0) {
    my $q = join(" ", @ARGV);
    $q = Encode::decode_utf8($q);
    $ans = $j->answers({
        body    => $q,
        channel => "console",
        network => "console",
        author  => $ENV{USER} // "console"
    });
    say "\nA:";
    say "     [$_->{plugin}][$_->{score}] $_->{body}" for sort { $b->{score} <=> $a->{score} } @{$ans->{answers}};
}
else {
    STDOUT->autoflush(1);

    print "Q: ";
    while(<>) {
        chomp;
        my $q = $_;
        $q = Encode::decode_utf8($q);

        $ans = $j->answers({
            body => $q,
            channel => "console",
            network => "console",
            author  => $ENV{USER} // "console"
        });

        say "A: ";
        say "    [$_->{plugin}] $_->{body}" for rev_nsort_by { $_->{score} } @{$ans->{answers}};
        print "\n";
        print "Q: ";
    }
}

